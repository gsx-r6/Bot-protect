# NPM Configuration for Bot-Protect

# Prefer local npm modules
save-prefix = "~"

# Prevent unnecessary package-lock updates
package-lock = true

# Use production environment by default
production = false

# Strict SSL verification
strict-ssl = true

# Increase timeout for large packages
fetch-timeout = 60000

# Registry
registry = https://registry.npmjs.org/

# Keep optional dependencies
optional = true
